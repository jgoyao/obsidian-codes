{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"jsx": "react",
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6"],
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": ["src/*"]
		},
		"esModuleInterop": true
	},
	"include": ["src/**/*", "types/**/*"]
}
